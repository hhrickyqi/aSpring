<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context.xsd">
    <context:component-scan base-package="com.weichuang"/>
    <!--
    name：对象的名称，可以重复（不这样写），可以有特殊字符
    class：类的完整路径，相对路径
    id：不可以重复的，不可以有特殊字符
    scope:域，默认单例模式
    -->
    <bean name="user3" class="com.weichuang.domain.User"></bean>

    <bean name="car1" class="com.weichuang.domain.Car">
        <property name="name" value="路虎"></property>
    </bean>
</beans>